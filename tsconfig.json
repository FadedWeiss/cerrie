{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6"],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "outDir": "cerriedist",
        "rootDir": "./",
        "declaration": true
    },
    "include": ["decl/index.d.ts", "cerrie/"],
    "tstl": {
        "luaTarget": "5.3",
        "noHeader": true,
        "luaLibImport": "require",
        "noImplicitSelf": true
    }
}
